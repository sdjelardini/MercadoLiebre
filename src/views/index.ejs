<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% productsVisited.forEach(productoVisitado => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= productoVisitado.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productoVisitado.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2> $ <%= toThousand(Math.trunc(productoVisitado.price*(1-(productoVisitado.discount/100)))) %></h2>
							<span> <%= productoVisitado.discount %> % OFF</span>
							<p> <%= productoVisitado.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% productsSale.forEach(productoOferta => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= productoOferta.id %> ">
						<figure class="product-box_image">
							<img src="/images/products/<%= productoOferta.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2> $ <%= toThousand(Math.trunc(productoOferta.price*(1-(productoOferta.discount/100)))) %></h2>
							<span> <%= productoOferta.discount %> % OFF</span>
							<p> <%= productoOferta.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
		<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>